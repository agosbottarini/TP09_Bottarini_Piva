
    <title>Crear una cuenta</title>



    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css"
      integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb"
      crossorigin="anonymous"
    />

    <div class="jumbotron jumbotron-fluid">
      <div class="container">
        <div class="row">

            <h1 style="margin-bottom: 4vw;" class="text-center">Crear una cuenta nueva</h1>

          <div class="col-12 col-sm-8 col-md-6 col-lg-4 offset-sm-2 offset-md-3 offset-lg-4" >



            <form class="mb-3" style="margin-top: 10%" action = '@Url.Action("AgregarUsuario", "Home")' method="post" onsubmit="return ValidarContraseña()">
              <div class="row">
                <div class="form-group col-12 col-sm-6" style="justify-content: center;">
                      <label for="username">Usuario:</label>
                      <input
                        type="text"
                        name="UserName"
                        class="form-control"
                        placeholder="Usuario"
                        id="username"
                      />
                  </div>
                  <div class="form-group">
                    <label for="email">Email:</label>
                    <input
                      type="email"
                      name="Gmail"
                      class="form-control"
                      placeholder="example@example.com"
                      id="email"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label for="password">Password:</label>
                    <input
                      type="password"
                      name="Contraseña"
                      class="form-control"
                      id="password"
                      required
                    />
                  </div>
                  <label>Cumpleanios:</label>
                  <div class="row no-gutters">
                    <div class="form-group">
                      <input 
                      type="date" 
                      name="Edad"
                      class="form-control"
                      value="2023-06-01" />
                  </div>
                  <div class="form-group">
                    <label for="password">Telefono:</label>
                    <input
                      type="tel"
                      name="Telefono"
                      class="form-control"
                      placeholder="1156789687"
                      id="telefono"
                      required
                    />
                </div>
              </div>
              
                  <button type="submit" class="btn btn-primary btn-block mb-3"> Crear cuenta </button>

                  <div class="alert alert-info small" role="alert">
                    Al crear una cuenta estas aceptando nuestros
                    <a href='@Url.Action("Terminos", "Home")' class="alert-link" target="_blank">Terminos &amp; y Condiciones</a> y
                    nuestra <a href='@Url.Action("Privacy", "Home")' class="alert-link" target="_blank"> Politica de Privacidad</a>.
                  </div>
                  <div class="text-center">
                    <p>Ya tienes una cuenta?...</p>
                    <a href='@Url.Action("Index", "Home")' class="btn btn-success">Login</a>
                  </div>
            </form>
          </div>
        </div>
      </div>
    </div>

<script>
  function ValidarContraseña()
  {
    const contraseña = document.GetElementById("Contraseña").vale;
    const caracteres = '!#$%&/()=?¡*.-_;:'
    let caracter = false,mayus = false;
    let i = 0;
    let o = 0;
    if(contraseña.lenght >= 8)
    {
      while(i<contraseña.lenght && caracter = false)
      {
        while(o<caracteres.lenght && caracter = false)
        {
          if(contraseña[i] == caracteres[o])
          {
            caracter = true;
          }
          o++;
        }
      o=0 ++
      i++;
    }
  }
  if(caracter == true)
  {
    i = 0 
    while(i<contraseña.lenght && mayus == false)
    {
      if(contraseña[i] == contraseña[i].toUpperCase())
      {
        mayus = true;
      }
      i++;
    }
  }  

  return (mayus == true)
}

</script>